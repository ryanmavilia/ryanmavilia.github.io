{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/pages/blog",
      "filePrefix": "{{date|yyyy-MM-dd}}",
      "contentTypes": ["default"]
    }
  ],
  "frontMatter.taxonomy.alignFilename": true,
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "blog",
      "clearEmpty": true,
      "template": "[[workspace]]/.frontmatter/templates/blog-post.md",
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string",
          "required": true
        },
        {
          "title": "description",
          "name": "description",
          "type": "string",
          "required": true
        },
        {
          "title": "tags",
          "name": "tags",
          "type": "tags",
          "default": []
        },
        {
          "title": "featured",
          "name": "featured",
          "type": "boolean",
          "default": false
        },
        {
          "title": "published",
          "name": "published",
          "type": "boolean",
          "default": true
        }
      ]
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.content.autoCreateSlug": true,
  "frontMatter.content.defaultSorting": "LastModified"
}
