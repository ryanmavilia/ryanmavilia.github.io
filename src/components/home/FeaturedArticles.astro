---
import ArticleSnippet from "../ArticleSnippet.astro";

interface Article {
  title: string;
  description: string;
  time: number;
  filename: string;
  timestamp: string;
}

interface Props {
  featuredArticles: Article[];
}

const { featuredArticles } = Astro.props;
---

<section class="relative py-16 bg-white -mt-16 z-20">
  <div class="max-w-5xl mx-auto px-4">
    <!-- Section header with floating metadata -->
    <div class="relative mb-12">
      <h2 class="text-5xl md:text-6xl font-bold leading-none mb-4">ARTICLES</h2>
    </div>

    <!-- Chaotic article grid -->
    <ul class="space-y-0">
      {
        featuredArticles.map((article, index) => (
          <li
            class={`
            mb-8
            
            
          `}
          >
            <ArticleSnippet
              title={article.title}
              description={article.description}
              duration={`${article.time} min`}
              url={article.filename}
              timestamp={new Date(article.timestamp)}
              variant={index === 0 ? "featured" : "default"}
            />
          </li>
        ))
      }
    </ul>
  </div>
</section>
